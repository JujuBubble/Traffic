<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Card Views -->
    <style name="CardView">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <!-- TEXT -->
    <style name="Git_Header" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="Git_Button" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="Git_Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:fontFamily">@font/proxima_nova_reg</item>
        <item name="android:textColor">@color/text_medium</item>
    </style>

    <style name="Map_Marker">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="Map_Marker_Selected" parent="Map_Marker">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Map_Marker_Unselected" parent="Map_Marker">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="Map_Marker_Seen" parent="Map_Marker">
        <item name="android:textColor">@color/text_light</item>
    </style>

</resources>
